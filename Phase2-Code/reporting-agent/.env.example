# Reporting Agent AI Employee Environment Configuration

# LLM Configuration (using Ollama for local AI)
LLM_BASE_URL=http://ollama:11434
LLM_MODEL=llama2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Application Configuration
REPORTING_PORT=8080
REPORTS_DIR=/app/reports
DATA_DIR=/app/data
TEMPLATES_DIR=/app/templates

# Integration Configuration
TASK_MANAGER_URL=http://task-manager:8080
TASK_MANAGER_TIMEOUT=30
WORKFLOW_AUTOMATION_URL=http://workflow-automation:8080
WORKFLOW_AUTOMATION_TIMEOUT=30

# Report Scheduling
DAILY_REPORT_TIME=09:00
WEEKLY_REPORT_DAY=monday
WEEKLY_REPORT_TIME=09:00
REPORT_RETENTION_DAYS=90

# Report Formats
REPORT_FORMATS=markdown,json,html
DEFAULT_FORMAT=markdown

# Anomaly Detection
ENABLE_ANOMALY_DETECTION=true
ANOMALY_THRESHOLD=0.3
ANOMALY_ALERT_CHANNELS=console,log

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Notification Configuration
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=console,log

# Security Configuration
API_KEY=your-secret-api-key-here
ENABLE_AUTH=false

# Performance Configuration
MAX_CONCURRENT_REPORTS=3
REPORT_TIMEOUT=600

# Development Configuration
DEBUG=false
RELOAD=false
