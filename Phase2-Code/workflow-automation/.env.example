# Workflow Automation AI Employee Environment Configuration

# LLM Configuration (using Ollama for local AI)
LLM_BASE_URL=http://ollama:11434
LLM_MODEL=llama2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Application Configuration
WORKFLOW_PORT=8080
WORKFLOW_DATA_DIR=/app/data
WORKFLOW_LOG_DIR=/app/logs
WORKFLOW_DEFINITIONS_DIR=/app/workflows

# Redis Configuration (for task queue and caching)
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10

# Workflow Engine Configuration
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_TIMEOUT=3600
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_RETRY_DELAY=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Notification Configuration
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=console,log

# Security Configuration
API_KEY=your-secret-api-key-here
ENABLE_AUTH=false

# Development Configuration
DEBUG=false
RELOAD=false
