# ── Platinum Tier Environment Variables ──────────────────────────────────────
# Copy to .env and fill in your real values. Never commit .env to git.

# ── Shared (Cloud + Local) ───────────────────────────────────────────────────
GROQ_API_KEY=gsk_...
GROQ_MODEL=llama-3.3-70b-versatile
VAULT_PATH=./Vault

# Git sync settings
GIT_REMOTE=git@github.com:yourname/ai-employee-vault.git
GIT_BRANCH=main
GIT_SYNC_INTERVAL=30

# ── Agent Identity ────────────────────────────────────────────────────────────
# Set AGENT_MODE=cloud on the VM, AGENT_MODE=local on your laptop
AGENT_MODE=local
AGENT_NAME=local

# ── Cloud VM Settings ─────────────────────────────────────────────────────────
CLOUD_VM_HOST=your-cloud-vm-ip
CLOUD_VM_PORT=8080
CLOUD_VM_SECRET=change-me-to-random-string

# ── Email (Cloud Agent) ───────────────────────────────────────────────────────
GMAIL_EMAIL=you@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx
GMAIL_IMAP_HOST=imap.gmail.com
GMAIL_IMAP_PORT=993
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ── LinkedIn (Cloud Agent) ────────────────────────────────────────────────────
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_PERSON_URN=urn:li:person:

# ── WhatsApp (Local Agent) ────────────────────────────────────────────────────
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=

# ── Facebook (Cloud Agent) ────────────────────────────────────────────────────
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=

# ── Odoo (Cloud VM) ──────────────────────────────────────────────────────────
ODOO_URL=https://your-cloud-vm:8069
ODOO_DB=odoo
ODOO_USERNAME=admin
ODOO_PASSWORD=

# ── MCP Server URLs ───────────────────────────────────────────────────────────
EMAIL_MCP_URL=http://localhost:8001
LINKEDIN_MCP_URL=http://localhost:8002
WHATSAPP_MCP_URL=http://localhost:8003
ODOO_MCP_URL=http://localhost:8004
SOCIAL_MCP_URL=http://localhost:8005

# ── Audit & Logging ───────────────────────────────────────────────────────────
AUDIT_LOG_PATH=./GoldTier/logs/audit.jsonl
ERROR_LOG_PATH=./GoldTier/logs/errors.jsonl

# ── Health Monitor ────────────────────────────────────────────────────────────
HEALTH_CHECK_INTERVAL=60
HEALTH_ALERT_EMAIL=you@gmail.com

# ── HITL Approval ────────────────────────────────────────────────────────────
APPROVAL_THRESHOLD=500.00
APPROVAL_TIMEOUT_HOURS=24
